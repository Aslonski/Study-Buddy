<div class="main-section" id="student-info">
  <h2>Invite New Teacher</h2>

  <%= form_for @teacher, url: {action: "create"} do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
