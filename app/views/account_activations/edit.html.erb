<section class="user-section">
  <p id="register_message">Welcome to Study Buddy! Please enter a new password below to register.</p>
  <%= form_for @teacher, :url => url_for(:controller => 'account_activations', :action => "update") do |f| %>
    <% if @teacher.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

        <ul>
        <% @teacher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit 'Register', :class => 'button'%>

    </div>
  <% end %>
</section>
